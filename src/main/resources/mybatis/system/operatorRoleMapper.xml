    <select id="get" resultType="com.littlebuddha.recruit.modules.entity.system.OperatorRole">
        SELECT
        <include refid="roleColumns"/>
        FROM recruit_operator_role
        WHERE id=#{id}
    </select>

    <select id="getByOperatorAndRole" resultType="com.littlebuddha.recruit.modules.entity.system.OperatorRole">
        SELECT
        <include refid="roleColumns"/>
        FROM recruit_operator_role
        WHERE id=#{id}
    </select>

    <select id="findList" resultType="com.littlebuddha.recruit.modules.entity.system.OperatorRole">
        SELECT
        <include refid="roleColumns"/>
        FROM recruit_operator_role a
        <where>
            a.del_flag = #{DEL_FLAG_NORMAL}
            <!-- 判断条件参数是否为空 -->
            <if test="operator != null and operator.id ！= null and operator.id != ''">
                and a.operator_id = #{operator.id}
            </if>
            <if test="operator != null and operator.id ！= null and operator.id != ''">
                and a.role_id = #{role_id}
            </if>
        </where>
        <choose>
            <when test="orderBy !=null and orderBy != ''">

            </when>
            <otherwise>

            </otherwise>
        </choose>
    </select>

    <select id="findAllList" resultType="com.littlebuddha.recruit.modules.entity.system.OperatorRole">
        SELECT
        <include refid="roleColumns"/>
        FROM recruit_operator_role a
        <choose>
            <when test="page !=null and page.orderBy != null and page.orderBy != ''">

            </when>
            <otherwise>

            </otherwise>
        </choose>
    </select>

    <insert id="insert">
        INSERT INTO recruit_operator_role(
            id,
            operator_id,
            role_id,
            create_by,
            create_date,
            update_by,
            update_date,
            remarks,
            del_flag
        )VALUES (
            #{id},
            #{operator.id},
            #{role.id},
            #{createBy.id},
            #{createDate},
            #{updateBy.id},
            #{updateDate},
            #{remarks},
            #{delFlag}
        )
    </insert>

    <update id="update">
        UPDATE recruit_operator_role SET
            operator_id = #{operator.id},
            role_id = #{role.id},
            create_by = #{createBy.id},
            create_date = #{createDate},
            update_by = #{updateBy.id},
            update_date = #{updateDate},
            remarks = #{remarks},
            del_flag = #{delFlag}
        WHERE id=#{id}
    </update>

    <update id="deleteByLogic">
        UPDATE recruit_operator_role SET del_flag = 1
        WHERE id=#{id}
    </update>

    <update id="recovery">
        UPDATE recruit_operator_role SET del_flag = 0
        WHERE id=#{id}
    </update>

    <delete id="deleteByPhysics">
        DELETE FROM recruit_operator_role
        WHERE id=#{id}
    </delete>
</mapper>