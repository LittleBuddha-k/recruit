<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.littlebuddha.recruit.modules.mapper.system.OperatorRoleMapper">
    <sql id="operatorRoleColumns">
        id AS "id",
        operator_id AS "operator.id",
        role_id AS "role.id",
        del_flag AS "delFlag"
    </sql>

    <sql id="operatorRoleJoins">
    </sql>

    <select id="get" resultType="com.littlebuddha.recruit.modules.entity.system.OperatorRole">
        SELECT
        <include refid="operatorRoleColumns"/>
        FROM recruit_operator_role
        WHERE id=#{id}
    </select>

    <select id="getByOperatorAndRole" resultType="com.littlebuddha.recruit.modules.entity.system.OperatorRole">
        SELECT
        <include refid="operatorRoleColumns"/>
        FROM recruit_operator_role a
        <!-- 判断条件参数是否为空 -->
        <where>
            <if test="operator != null and operator.id != null and operator.id != ''">
                a.operator_id = #{operator.id}
            </if>
            <if test="role != null and role.id != null and role.id != ''">
                and a.role_id = #{role.id}
            </if>
        </where>
    </select>

    <select id="findList" resultType="com.littlebuddha.recruit.modules.entity.system.OperatorRole">
        SELECT
        <include refid="operatorRoleColumns"/>
        FROM recruit_operator_role a
        <where>
            a.del_flag = #{DEL_FLAG_NORMAL}
            <!-- 判断条件参数是否为空 -->
            <if test="operator != null and operator.id != null and operator.id != ''">
                and a.operator_id = #{operator.id}
            </if>
            <if test="operator != null and operator.id != null and operator.id != ''">
                and a.role_id = #{role_id}
            </if>
        </where>
        <choose>
            <when test="orderBy !=null and orderBy != ''">

            </when>
            <otherwise>

            </otherwise>
        </choose>
    </select>

    <select id="findAllList" resultType="com.littlebuddha.recruit.modules.entity.system.OperatorRole">
        SELECT
        <include refid="operatorRoleColumns"/>
        FROM recruit_operator_role a
        <choose>
            <when test="page !=null and page.orderBy != null and page.orderBy != ''">

            </when>
            <otherwise>

            </otherwise>
        </choose>
    </select>

    <insert id="insert">
        INSERT INTO recruit_operator_role(
            id,
            operator_id,
            role_id,
            del_flag
        )VALUES (
            #{id},
            #{operator.id},
            #{role.id},
            #{delFlag}
        )
    </insert>

    <update id="update">
        UPDATE recruit_operator_role SET
            operator_id = #{operator.id},
            role_id = #{role.id},
            del_flag = #{delFlag}
        WHERE id=#{id}
    </update>

    <update id="deleteByLogic">
        UPDATE recruit_operator_role SET del_flag = 1
        WHERE id=#{id}
    </update>

    <update id="recovery">
        UPDATE recruit_operator_role SET del_flag = 0
        WHERE id=#{id}
    </update>

    <delete id="deleteByPhysics">
        DELETE FROM recruit_operator_role
        WHERE id = #{id}
    </delete>

    <delete id="deleteOutByOperatorRole">
        DELETE FROM recruit_operator_role
        <where>
            <if test="operatorId != null and operatorId= ''">
                operator_id = #{operatorId}
            </if>
            <if test="roleIds != null and roleIds != ''">
                and role_id NOT IN (#{roleIds})
            </if>
        </where>
    </delete>

    <!--删除一切用户角色-->
    <delete id="deleteOutByOperator">
        DELETE FROM recruit_operator_role
        WHERE operator_id = #{operatorId}
    </delete>
</mapper>